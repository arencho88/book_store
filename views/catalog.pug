extends main.pug

block content
    <main class="container">
        <div class="row mt-3">
            <div class="col">

                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                    
                    each card in cards
                        <div class="col">
                            <div class="card h-100">
                                <img class="card-img-top" src="#{card.image}" alt="">
                                <div class="card-body">
                                    <h5 class="card-title">#{card.title}</h5>
                                    <div class="card-text">#{card.author}</div>
                                </div>
                                <div class="card-footer">
                                    <input class="btn btn-success" type="button" value="Select">
                                </div>
                            </div>
                        </div>

                </div>

            </div>
        </div>
    </main>
